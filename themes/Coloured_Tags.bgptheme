# This theme for gitprompt.sh is optimized for the "Solarized Dark" and "Solarized Light" color schemes
# tweaked for Ubuntu terminal fonts

override_git_prompt_colors() {
	GIT_PROMPT_THEME_NAME="Coloured Tags"

	GIT_PROMPT_STATUS_COLOR="${ResetColor}${CyanBg}${DimBlack}"

	GIT_PROMPT_START="${YellowBg}${DimBlack} \u ${ResetColor} ${RedBg}${DimBlack} \h ${ResetColor} ${BlueBg}${DimBlack} \w ${ResetColor}"
	GIT_PROMPT_END="\n${BrightYellowFg}\$${ResetColor} "

	GIT_PROMPT_PREFIX=""
	GIT_PROMPT_SUFFIX="${GIT_PROMPT_STATUS_COLOR} ${ResetColor}"
	
	GIT_PROMPT_SEPARATOR=""
	GIT_PROMPT_SYMBOLS_AHEAD="${GIT_PROMPT_STATUS_COLOR} ↑"
	GIT_PROMPT_SYMBOLS_BEHIND="${GIT_PROMPT_STATUS_COLOR} ↓"
	GIT_PROMPT_SYMBOLS_PREHASH="᠅" # ⧖ ✦ ◇ ∴ ∵ ∷
	GIT_PROMPT_SYMBOLS_NO_REMOTE_TRACKING="${GIT_PROMPT_STATUS_COLOR} ◘"
	GIT_PROMPT_REMOTE="${GIT_PROMPT_STATUS_COLOR} ▲${ResetColor}"

	GIT_PROMPT_BRANCH="${GIT_PROMPT_STATUS_COLOR} "
	GIT_PROMPT_MASTER_BRANCH="${GIT_PROMPT_BRANCH}"
	GIT_PROMPT_MASTER_BRANCHES="(master)"

	GIT_PROMPT_STASHED="${GIT_PROMPT_STATUS_COLOR} ◆"
	GIT_PROMPT_UNTRACKED="${GIT_PROMPT_STATUS_COLOR} ⦁"
	GIT_PROMPT_CHANGED="${GIT_PROMPT_STATUS_COLOR} +"
	GIT_PROMPT_CONFLICTS="${GIT_PROMPT_STATUS_COLOR} ×"
	GIT_PROMPT_STAGED="${GIT_PROMPT_STATUS_COLOR} ￫"
	GIT_PROMPT_CLEAN="${GIT_PROMPT_STATUS_COLOR} ✓" # ★
	
	GIT_PROMPT_COMMAND_OK="${GIT_PROMPT_STATUS_COLOR} ok"
	GIT_PROMPT_COMMAND_FAIL="${GIT_PROMPT_STATUS_COLOR} ×-_LAST_COMMAND_STATE_"
	GIT_PROMPT_VIRTUALENV="(${GIT_PROMPT_STATUS_COLOR} _VIRTUALENV_ ${ResetColor})"
	GIT_PROMPT_UPSTREAM="{${GIT_PROMPT_STATUS_COLOR} _UPSTREAM_ ${ResetColor}}"

	GIT_PROMPT_START_USER="_LAST_COMMAND_INDICATOR_${GIT_PROMPT_STATUS_COLOR}${PathShort}${ResetColor}"
	GIT_PROMPT_END_USER="\n${GIT_PROMPT_STATUS_COLOR}${Time12a}${ResetColor}$ "
	GIT_PROMPT_START_ROOT="${GIT_PROMPT_START_USER}"
	GIT_PROMPT_END_ROOT="\n${GIT_PROMPT_STATUS_COLOR}${Time12a}${ResetColor}# "
}

reload_git_prompt_colors "Coloured Tags"
